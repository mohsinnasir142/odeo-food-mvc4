<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            @if (Roles.IsUserInRole("customer"))
                            {
                                <li>@Html.ActionLink("Create Order", "Create")</li>
                                <li>@Html.ActionLink("View Dishes", "Create")</li>
                                <li>@Html.ActionLink("Sales Record", "Create")</li>
                            }
                            else if (Roles.IsUserInRole("administrator"))
                                 {
                                <li>@Html.ActionLink("Create Dish", "Dish", "Dish")</li>
                                <li>@Html.ActionLink("All Dishes", "AllDishes", "Dish")</li>
                                <li>@Html.ActionLink("Create Dish Type", "CreateDishType", "Dish")</li>
                                <li>@Html.ActionLink("All Dish Type", "AllDishType", "Dish")</li><br /><br />
                                <li>@Html.ActionLink("All Customers", "Create")</li>
                                <li>@Html.ActionLink("total Sales", "Create")</li>
                                <li>@Html.ActionLink("Create Roles", "Create")</li>
                                <li>@Html.ActionLink("Manage Roles", "Create")</li>
                                
                                 }
                            else if (Roles.IsUserInRole("manager"))
                            {
                                <li>@Html.ActionLink("Create Order", "Create")</li>
                                <li>@Html.ActionLink("Create Dish", "Create")</li>
                                <li>@Html.ActionLink("All Dishes", "Create")</li>
                                <li>@Html.ActionLink("Create Dish Type", "Create")</li>
                                <li>@Html.ActionLink("All Dish Type", "Create")</li><br /><br />
                                <li>@Html.ActionLink("total Sales", "Create")</li>
                                
                                
                            }
                                
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
